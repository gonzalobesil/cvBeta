<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PoliciaActivity" >
       <!--  Error message -->
    <TextView android:id="@+id/reportar_error"
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
   		android:textColor="#e30000"
   		android:padding="10dip"
   		android:textStyle="bold"/>

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textComentario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:text="Enviar" />

    <Button
        android:id="@+id/btn_policiavisible"
        style="@style/DashboardButton"
        android:layout_alignLeft="@+id/textComentario"
        android:layout_alignTop="@+id/reportar_error"
        android:layout_marginTop="20dp"
        android:drawableTop="@drawable/btn_policiavisible"
        android:text="Escondida" />

    <EditText
        android:id="@+id/textComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Comentario" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_policiaEscondida"
        style="@style/DashboardButton"
        android:layout_alignBaseline="@+id/btn_policiavisible"
        android:layout_alignBottom="@+id/btn_policiavisible"
        android:layout_alignRight="@+id/textComentario"
        android:drawableTop="@drawable/btn_policiaescondida"
        android:text="Visible" />

</RelativeLayout>

